#include<bits/stdc++.h>
using namespace std;
int main()
{
    float x;
    cin >> x;

    if(x>=0 && x<=400)
    {
        printf("Novo salario: %.2f\n",(x+(x/100)*15));
        printf("Reajuste ganho: %.2f\n",(x/100)*15);
        printf("Em percentual: 15 %\n");
    }
    else if(x>400 && x<=800)
    {
        printf("Novo salario: %.2f\n",(x+(x/100)*12));
        printf("Reajuste ganho: %.2f\n",(x/100)*12);
        printf("Em percentual: 12 %\n");
    }
    else if(x>800 && x<=1200)
    {
        printf("Novo salario: %.2f\n",(x+(x/100)*10));
        printf("Reajuste ganho: %.2f\n",(x/100)*10);
        printf("Em percentual: 10 %\n");
    }
    else if(x>1200 && x<=2000)
    {
        printf("Novo salario: %.2f\n",(x+(x/100)*7));
        printf("Reajuste ganho: %.2f\n",(x/100)*7);
        printf("Em percentual: 7 %\n");
    }
    else if( x>2000)
    {
        printf("Novo salario: %.2f\n",(x+(x/100)*4));
        printf("Reajuste ganho: %.2f\n",(x/100)*4);
        printf("Em percentual: 4 %\n");
    }

    return 0;
}
