#include<bits/stdc++.h>
using namespace std;
int main()
{
    int a, b, c;
    cin >> a >> b >> c;


    if(b>a && c<=b)
    {
        cout << ":(\n";
    }
    else if(b>a && c>b && (c-b)<(b-a))
    {
        cout << ":(\n";
    }
    else if(b>a && c>b && (c-b)>=(b-a))
    {
        cout << ":)\n";
    }
    else if(b<a && c<b && (b-c)<(a-b))
    {
        cout << ":)\n";
    }
    else if(b<a && c<b && (b-c)>=(a-b))
    {
        cout << ":(\n";
    }
    else if(a==b && c>b)
    {
        cout << ":)\n";
    }
    else if(b<a && c>=b)
    {
        cout << ":)\n";
    }
    else{
        cout << ":(\n";
    }

    return 0;
}
