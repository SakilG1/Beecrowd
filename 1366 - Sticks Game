#include<bits/stdc++.h>
using namespace std;
int main()
{
    int i,n,t,q;
    while(cin >> n)
    {
        if(n==0)
            break;

        else{
            int a=0;
            for(i=1; i<=n; i++)
            {
                cin >> t >> q;

                if(q%2==0)
                {
                    a=a+q;
                }
                else{
                    a=a+q-1;
                }
            }
            cout << a/4 << endl;
        }
    }

    return 0;
}
