#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin >> n;

    while(n>=500)
    {
        if(n>=900 && n<1000)
        {
            cout << "CM";
            n -= 900;
        }
        else
        {
            cout << "D";
            n -= 500;
        }
    }
    while(n>=100)
    {
        if(n>=400 && n<500)
        {
            cout << "CD";
            n -= 400;
        }
        else
        {
            cout << "C";
            n -= 100;
        }
    }
    while(n>=50)
    {
        if(n>=90 && n<100)
        {
            cout << "XC";
            n -= 90;
        }
        else
        {
            cout << "L";
            n -= 50;
        }
    }
    while(n>=10)
    {
        if(n>=40 && n<50)
        {
            cout << "XL";
            n -= 40;
        }
        else
        {
            cout << "X";
            n -= 10;
        }
    }
    while(n>=5)
    {
        if(n>=9 && n<10)
        {
            cout << "IX";
            n -= 9;
        }
        else
        {
            cout << "V";
            n -= 5;
        }
    }
    while(n>=1)
    {
        if(n>=4 && n<5)
        {
            cout << "IV";
            n -= 4;
        }
        else
        {
            cout << "I";
            n -= 1;
        }
    }
    cout << endl;

    return 0;
}
