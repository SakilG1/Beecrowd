#include <bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin >> t;
    while (t--)
    {
        int x, y, s = 0;
        cin >> x >> y;
        if (x % 2 == 0)
            x++;
        for (int i = 0; i < y; i++)
        {
            s += x;
            x += 2;
        }
        cout << s << endl;
    }

    return 0;
}
