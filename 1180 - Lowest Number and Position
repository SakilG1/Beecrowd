#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin >> n;
    int arr[n], i;
    for(i=0; i<n; i++)
    {
        cin >> arr[i];
    }
    int min=arr[0], x=0;
    for(i=1; i<n; i++)
    {
        if(arr[i]<min)
        {
            min=arr[i];
            x=i;
        }
    }
    cout << "Menor valor: " << min << "\nPosicao: " << x << endl;

    return 0;
}
