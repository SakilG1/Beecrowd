#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin >> t;
    while(t--)
    {
        int x, y, i, c=0;
        cin >> x >> y;
        for(i=min(x,y)+1; i<max(x,y); i++)
        {
            if(i%2!=0)
            {
                c += i;
            }
        }
        cout << c << endl;
    }

    return 0;
}
